<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_take_pic"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/dialog_top_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="拍照"
            android:textColor="#047b15"
            android:textSize="30px" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="#e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_album"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/dialog_bottom_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我的相册选择"
            android:textColor="#047b15"
            android:textSize="30px" />
    </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="20px"
    android:background="#00000000" />
    <LinearLayout
        android:id="@+id/ll_cancel"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/dialog_selector"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginBottom="20px"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#047b15"
            android:textSize="30px" />
    </LinearLayout>


</LinearLayout>