<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@mipmap/birth_info_background">
        <include layout="@layout/top_my"></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <com.love311.www.birthdays.utils.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="140px"
            android:layout_height="140px"
            android:src="@mipmap/user_profile"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="Lee"
            android:textSize="30px"
            android:textColor="#938888"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="二零零七年冬月十三"
                android:textSize="26px"
                android:textColor="#938888"
                android:layout_gravity="center"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离他的农历生日"
                android:textSize="26px"
                android:textColor="#938888"/>
            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_left"
                 android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:text="7天"
                android:textColor="#3eb676"
                android:textSize="30px"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/address_bar" />
    <TextView
        android:id="@+id/tv_remarks"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="备注信息"
        android:textSize="30px"
        android:singleLine="true"
        android:textColor="#3eb676"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/address_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="100px"
        android:orientation="horizontal"
        android:background="#f1f2e9">
        <LinearLayout
            android:id="@+id/ll_send_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_send_message"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/message"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信祝福"
                android:layout_marginTop="20px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/telephone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话祝福"
                android:layout_marginTop="20px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>